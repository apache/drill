{
  "storage":{
    dfs: {
      type: "file",
      connection: "file:///",
      workspaces: {
        "root" : {
          location: "/",
          writable: false
        },
        "tmp" : {
          location: "/tmp",
          writable: true
        }
      },
      formats: {
        "psv" : {
          type: "text",
          extensions: [ "tbl" ],
          delimiter: "|"
        },
        "csv" : {
          type: "text",
          extensions: [ "csv" ],
          delimiter: ","
        },
        "tsv" : {
          type: "text",
          extensions: [ "tsv" ],
          delimiter: "\t"
        },
        "parquet" : {
          type: "parquet"
        },
        "json" : {
          type: "json",
          extensions: [ "json" ]
        },
        "avro" : {
          type: "avro"
        },
        "sequencefile": {
          type : "sequencefile",
          extensions: [ "seq" ]
        }
      }
    },

    cp: {
      type: "file",
      connection: "classpath:///",
      formats: {
        "csv" : {
          type: "text",
          extensions: [ "csv" ],
          delimiter: ","
        },
        "tsv" : {
                  type: "text",
                  extensions: [ "tsv" ],
                  delimiter: "\t"
        },
        "json" : {
          type: "json",
          extensions: [ "json" ]
        },
        "parquet" : {
          type: "parquet"
        },
        "avro" : {
          type: "avro"
        },
        "sequencefile": {
          type : "sequencefile",
          extensions: [ "seq" ]
        }
      }
    }
  }
}
