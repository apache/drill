{
  "storage":{
    dfs: {
      type: "file",
      connection: "file:///",
      workspaces: {
        "root" : {
          location: "/",
          writable: false
        },
        "tmp" : {
          location: "/tmp",
          writable: true,
          storageformat: "csv"
        }
      },
      formats: {
        "psv" : {
          type: "text",
          extensions: [ "tbl" ],
          delimiter: "|"
        },
        "csv" : {
          type: "text",
          extensions: [ "csv" ],
          delimiter: ","
        },
        "tsv" : {
          type: "text",
          extensions: [ "tsv" ],
          delimiter: "\t"
        },
        "parquet" : {
          type: "parquet"
        },
        "json" : {
          type: "json"
        }
      }
    },

    cp: {
      type: "file",
      connection: "classpath:///",
      formats: {
        "csv" : {
          type: "text",
          extensions: [ "csv" ],
          delimiter: ","
        },
        "json" : {
          type: "json"
        },
        "parquet" : {
          type: "parquet"
        }
      }
    }
  }
}
