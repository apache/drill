  <build>
    <plugins>
      <plugin>
        <groupId>org.apache.drill.tools</groupId>
        <artifactId>drill-fmpp-maven-plugin</artifactId>
        <version>${project.version}</version>
        <executions>
          <execution>
            <id>generate-fmpp-sources</id>
            <phase>generate-sources</phase>
            <goals>
              <goal>generate</goal>
            </goals>
            <configuration>
              <config>${freemarker.conf.file}</config>
              <output>${project.build.directory}/generated-sources</output>
              <templates>src/main/codegen/templates</templates>
            </configuration>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-surefire-plugin</artifactId>
        <configuration>
          <!-- Skip Hive Docker tests on ARM64 due to slow emulation (20-30 min startup) -->
          <!-- Tests run normally on AMD64 architecture and in CI/CD -->
          <excludedGroups>${hive.test.excludedGroups}</excludedGroups>
        </configuration>
      </plugin>
    </plugins>
  </build>

  <profiles>
    <!-- Skip Hive Docker tests on ARM64/aarch64 by default (slow emulation) -->
    <!-- Linux reports as 'aarch64', macOS reports as 'arm64' -->
    <profile>
      <id>skip-hive-tests-on-arm-linux</id>
      <activation>
        <os>
          <arch>aarch64</arch>
        </os>
      </activation>
      <properties>
        <hive.test.excludedGroups>org.apache.drill.categories.HiveStorageTest</hive.test.excludedGroups>
      </properties>
    </profile>

    <profile>
      <id>skip-hive-tests-on-arm-macos</id>
      <activation>
        <os>
          <arch>arm64</arch>
        </os>
      </activation>
      <properties>
        <hive.test.excludedGroups>org.apache.drill.categories.HiveStorageTest</hive.test.excludedGroups>
      </properties>
    </profile>

    <!-- Force run Hive tests even on ARM64 with: mvn test -Pforce-hive-tests -->
    <profile>
      <id>force-hive-tests</id>
      <properties>
        <hive.test.excludedGroups></hive.test.excludedGroups>
      </properties>
    </profile>
  </profiles>
