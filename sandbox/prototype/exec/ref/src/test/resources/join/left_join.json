{
   head: {
      type: "APACHE_DRILL_LOGICAL",
      version: "1",
      generator: {
         type: "manual",
         info: "na"
      }
   },
   storage:{
       "queue" : {
           "type" : "queue",
           "encoding" : "RECORD"
       },
       "cp" : {
           "type": "classpath"
       },
       "fs1" : {
           "type" : "fs",
           "root" : "file:///"
       },
       "console" : {
           "type" : "console"
       }
   },
   query: [
      {
         @id: 1,
         op: "scan",
         memo: "initial_scan",
         ref: "employees",
         storageengine: "cp",
         selection: {
         	 path: "/join/employees.json",
         	 type: "JSON"
         }
      },
      {
         @id: 2,
         op: "scan",
         memo: "second_scan",
         ref: "departments",
         storageengine: "cp",
         selection: {
             path: "/join/departments.json",
             type: "JSON"
         }
      },
      {
         @id: 3,
         op: "join",
         left: 1,
         right: 2,
         type: "left",
         conditions: [
            {
               relationship: "==",
               left: "employees.deptId",
               right: "departments.deptId"
            }
         ]
      },
      {
         input: 3,
         op: "store",
         memo: "output sink",
         storageengine: "queue",
         target: {number: 0}
      }
   ]
}