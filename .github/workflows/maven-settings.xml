<?xml version="1.0" encoding="UTF-8"?>
<settings xmlns="http://maven.apache.org/SETTINGS/1.0.0"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/SETTINGS/1.0.0 http://maven.apache.org/xsd/settings-1.0.0.xsd">
  <mirrors>
    <!-- Mirror for Maven Central with retry -->
    <mirror>
      <id>central-mirror</id>
      <mirrorOf>central</mirrorOf>
      <name>Central Repository Mirror</name>
      <url>https://repo1.maven.org/maven2</url>
    </mirror>
  </mirrors>

  <profiles>
    <profile>
      <id>retry-config</id>
      <properties>
        <maven.wagon.http.retryHandler.count>3</maven.wagon.http.retryHandler.count>
        <maven.wagon.http.retryHandler.requestSentEnabled>true</maven.wagon.http.retryHandler.requestSentEnabled>
      </properties>
    </profile>
  </profiles>

  <activeProfiles>
    <activeProfile>retry-config</activeProfile>
  </activeProfiles>
</settings>
